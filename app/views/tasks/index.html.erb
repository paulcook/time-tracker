<div class="page-header">
  <% if @project and @project.persisted? %>
  <%= link_to new_project_task_path(@project), :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Task
  <% end %>
  <% end %>
  <h1>Listing tasks</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Project</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @tasks.each do |task| %>
    <tr>
      <td><%= task.project %></td>
      <td><%= task.name %></td>
      <td><%= link_to 'Show', [task.project,task] %></td>
      <td><%= link_to 'Edit', edit_project_task_path(task.project,task) %></td>
      <td><%= link_to 'Destroy', [task.project,task], confirm: 'Are you sure?', method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>
